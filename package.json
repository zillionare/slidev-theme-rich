{
  "name": "slidev-theme-rich",
  "version": "0.1.0",
  "type": "module",
  "keywords": [
    "slidev-theme",
    "slidev",
    "animation",
    "animate-css",
    "markdown admonition",
    "markmap",
    "device mockup"
  ],
  "engines": {
    "node": ">=18.0.0",
    "slidev": ">=0.19.3"
  },
  "scripts": {
    "build": "slidev build example.md",
    "dev": "slidev example.md --open",
    "deploy": "gh-pages -d dist",
    "export": "slidev export example.md",
    "screenshot": "slidev export example.md --format png"
  },
  "dependencies": {
    "@slidev/types": "^0.49.12",
    "animate.css": "^4.1.1",
    "markdown-it-admon": "^1.0.1",
    "markdown-it-emoji": "^3.0.0",
    "markmap-lib": "^0.17.0",
    "prism-theme-vars": "^0.2.5",
    "tinycolor2": "^1.6.0"
  },
  "devDependencies": {
    "@slidev/cli": "^0.49.12",
    "gh-pages": "^6.1.1"
  },
  "//": "Learn more: https://sli.dev/themes/write-a-theme.html",
  "slidev": {
    "colorSchema": "both",
    "highlighter": "all",
    "defaults": {
      "fonts": {
        "sans": "Nunito Sans",
        "mono": "Fira Code"
      },
      "aspectRatio": "16/9",
      "canvasWidth": 1600
    }
  }
}
